{
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsx watch --env-file .env ./src/server.ts",
    "start": "pnpm run build; node --env-file .env dist/server.js",
    "format": "npx @biomejs/biome check --write",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPatterns=unit",
    "test:integration": "jest --testPathPatterns=__tests__ --testPathIgnorePatterns=unit",
    "test:unit:coverage": "jest --testPathPatterns=unit --coverage",
    "test:controllers": "jest --testPathPatterns=unit/controllers",
    "test:services": "jest --testPathPatterns=unit/services",
    "test:repositories": "jest --testPathPatterns=unit/repositories"
  },
