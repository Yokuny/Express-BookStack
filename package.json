    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.5",
    "uuid": "^11.1.0",
    "zod": "^4.0.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/bcrypt": "^5.0.0",
